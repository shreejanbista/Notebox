<resources>

    <!-- this style is supported till API-22, for above APIs the changes should be made in styles.xml(v23) -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAppTheme</item>

        <!-- Self added attributes-->
        <item name="android:statusBarColor">@color/colorWhite_FFFFFF</item>
    </style>

    <style name="bottom_navigation_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@dimen/btm_nav_but_weight</item>
        <item name="android:background">@color/colorWhite_FFFFFF</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorGray_777777</item>
        <item name="android:textSize">@dimen/btm_nav_but_text_size</item>
    </style>
    <style name="profile_four_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/btn_rounded_corner</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGray_777777</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="explore_four_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_br_radius_gray_smaller</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGray_777777</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="profile_lower_four_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/colorGray_888888</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="upload_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/consolas_regular</item>
        <item name="android:textColor">@color/colorAppTheme</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="unit_select_button">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:background">@drawable/bg_br_radius_gray_smaller</item>
        <item name="android:fontFamily">@font/segoe_ui</item>
        <item name="android:textColor">#999999</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>
