<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/subName_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/segoe_ui"
        android:text="U2_CN2_Ganga_Rao_CSE_BE_NMIT.pdf"
        android:textColor="@color/colorAppTheme"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/upload_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/segoe_ui"
        android:text="June 12, 2019"
        android:textColor="@color/colorGray_AAAAAA"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView19"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView19"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/ownerName_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/segoe_ui"
        android:text="by"
        android:textColor="@color/colorGray_AAAAAA"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/subName_TV"
        app:layout_constraintTop_toBottomOf="@+id/subName_TV" />

    <TextView
        android:id="@+id/authorName_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/segoe_ui"
        android:text="author"
        android:textColor="@color/colorGray_AAAAAA"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/subName_TV"
        app:layout_constraintTop_toBottomOf="@+id/ownerName_TV" />


    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:background="@color/md_grey_300"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/authorName_TV"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/josefin_sans_regular"
        android:text="4.7"
        android:textColor="@color/colorGray_AAAAAA"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/download_count"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/download_count"
        app:layout_constraintVertical_bias="0.23" />

    <TextView
        android:id="@+id/share_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="230"
        android:textColor="@color/colorGray_AAAAAA"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/Share_logo"
        app:layout_constraintEnd_toStartOf="@+id/download_b"
        app:layout_constraintTop_toTopOf="@+id/Share_logo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="9dp"
        android:layout_height="12dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="@+id/upload_date"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:srcCompat="@drawable/ic_star_gold_24dp" />

    <ImageView
        android:id="@+id/Share_logo"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="3dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/textView18"
        app:layout_constraintEnd_toStartOf="@+id/share_count"
        app:layout_constraintTop_toTopOf="@+id/textView18"
        app:srcCompat="@drawable/ic_share_brown_24dp" />

    <ImageView
        android:id="@+id/download_b"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="3dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/Share_logo"
        app:layout_constraintEnd_toStartOf="@+id/download_count"
        app:layout_constraintTop_toTopOf="@+id/Share_logo"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_file_download_brown_24dp" />

    <TextView
        android:id="@+id/download_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="200"
        android:textColor="@color/colorGray_AAAAAA"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/download_b"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/download_b" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="Ganga Rao"
        android:textColor="@color/colorGray_AAAAAA"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/authorName_TV"
        app:layout_constraintStart_toEndOf="@+id/authorName_TV"
        app:layout_constraintTop_toTopOf="@+id/authorName_TV" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="Levi Ackerman"
        android:textColor="@color/colorGray_AAAAAA"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ownerName_TV"
        app:layout_constraintStart_toEndOf="@+id/ownerName_TV"
        app:layout_constraintTop_toTopOf="@+id/ownerName_TV" />

</android.support.constraint.ConstraintLayout>