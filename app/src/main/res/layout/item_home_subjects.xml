<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/subAbb_TV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_bigger_radius_gray"
        android:fontFamily="@font/segoe_ui_bold"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:text="CN2"
        android:textColor="@color/colorGray_999999"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subName_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/segoe_ui"
        android:text="Computer Networks - 2"
        android:textColor="@color/colorAppTheme"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/subAbb_TV"
        app:layout_constraintTop_toTopOf="@+id/subAbb_TV" />

    <TextView
        android:id="@+id/lastUpdate_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/josefin_sans_regular"
        android:text="last update: 12 June, 2019"
        android:textColor="@color/colorWhite_BFBFBF"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/subName_TV"
        app:layout_constraintTop_toBottomOf="@+id/subName_TV" />

    <ImageButton
        android:id="@+id/subBookmark_IB"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/lastUpdate_TV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subName_TV"
        app:srcCompat="@drawable/icon_bookmark_gray_border" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/md_grey_300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/subAbb_TV"
        app:layout_constraintTop_toBottomOf="@+id/subAbb_TV" />
</android.support.constraint.ConstraintLayout>