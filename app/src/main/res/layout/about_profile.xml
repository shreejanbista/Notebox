<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginTop="80dp"
    android:layout_marginEnd="30dp">


    <TextView
        android:id="@+id/about_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/josefin_sans_regular"
        android:text="@string/about"
        android:textAllCaps="false"
        android:textColor="@color/colorAppTheme"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView33"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/segoe_ui"
        android:lineSpacingExtra="3sp"
        android:text="@string/desc_about"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/colorGray_AAAAAA"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/about_view"
        app:layout_constraintTop_toBottomOf="@+id/about_view" />


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/Application_TV"
        app:layout_constraintStart_toStartOf="@+id/Application_TV"
        app:layout_constraintTop_toBottomOf="@id/Application_TV">


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"

            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_apptheme_pill_20"
            android:fontFamily="@font/consolas_regular"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="www.cipherhub.ml"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite_FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/visit_text"
            app:layout_constraintStart_toEndOf="@+id/visit_text"
            app:layout_constraintTop_toTopOf="@+id/visit_text" />

        <TextView
            android:id="@+id/visit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="Visit Cipher Hub"
            android:textColor="@color/colorGray_AAAAAA"
            android:textSize="12sp" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/Application_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/josefin_sans_regular"
        android:text="Application is under development "
        android:textColor="@color/colorGray_AAAAAA"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/textView33"
        app:layout_constraintStart_toStartOf="@+id/textView33"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />
</android.support.constraint.ConstraintLayout>