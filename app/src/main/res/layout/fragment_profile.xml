<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite_FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/app_name"
            android:textColor="@color/colorGray_777777"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fullName_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/comfortaa_bold"
            android:maxLines="1"
            android:text="Your Profile"
            android:textColor="@color/colorAppTheme"
            android:textSize="26sp"
            app:layout_constraintEnd_toStartOf="@+id/userDisplayPicture_IB"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/userDisplayPicture_IB"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/colorWhite_FFFFFF"
            android:contentDescription="@string/button_with_icon"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_grayed_filled"
            app:layout_constraintBottom_toBottomOf="@+id/fullName_TV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/rating_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:visibility="invisible"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/comfortaa_bold"
            android:textColor="@color/colorGray_888888"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/fullName_TV"
            app:layout_constraintTop_toBottomOf="@id/fullName_TV" />

        <RatingBar
            android:id="@+id/rating_RB"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginStart="3dp"
            android:numStars="5"
            android:stepSize=".5"
            app:layout_constraintBottom_toBottomOf="@+id/rating_TV"
            app:layout_constraintStart_toEndOf="@+id/rating_TV"
            app:layout_constraintTop_toTopOf="@+id/rating_TV" />

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="30dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/rating_RB"
            app:layout_constraintEnd_toEndOf="@+id/userDisplayPicture_IB"
            app:layout_constraintTop_toTopOf="@+id/rating_RB">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_file_upload_brown_24dp" />

                <TextView
                    android:id="@+id/userUploadsCount_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui"
                    android:text="00"
                    android:textColor="@color/colorGray_888888"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="@+id/imageView3" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="6dp"
                    android:background="@color/colorGray_888888"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintBottom_toBottomOf="@+id/userDownloadsCount_TV"
                    app:layout_constraintEnd_toStartOf="@+id/userDownloadsCount_TV"
                    app:layout_constraintTop_toTopOf="@+id/userDownloadsCount_TV"
                    app:srcCompat="@drawable/ic_file_download_brown_24dp" />

                <TextView
                    android:id="@+id/userDownloadsCount_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/segoe_ui"
                    android:text="00"
                    android:textColor="@color/colorGray_888888"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/instituteName_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:ellipsize="end"
        android:fontFamily="@font/segoe_ui"
        android:maxLines="1"
        android:text="Nitte Meenakshi Institute of Technology"
        android:textColor="@color/colorGray_777777"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editUserDetails_IB"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/courseName_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/segoe_ui"
        android:text="Bachelors in Engineering"
        android:textColor="@color/colorGray_777777"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/instituteName_TV"
        app:layout_constraintTop_toBottomOf="@+id/instituteName_TV" />

    <TextView
        android:id="@+id/branchName_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/segoe_ui"
        android:text="Computer &amp; Science Engineering"
        android:textColor="@color/colorGray_777777"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/courseName_TV"
        app:layout_constraintTop_toBottomOf="@+id/courseName_TV" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:visibility="gone"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/branchName_TV"
        app:layout_constraintVertical_bias="0.1">


        <Button
            android:id="@+id/bookmarks_B"
            style="@style/profile_four_buttons"
            android:drawableStart="@drawable/icon_bookmark_red_border"
            android:text="Bookmarks" />

        <Button
            android:id="@+id/myNotes_B"
            style="@style/profile_four_buttons"
            android:drawableLeft="@drawable/ic_history_black_24dp"
            android:text="My Notes" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/uploads_B"
            style="@style/profile_four_buttons"
            android:drawableLeft="@drawable/ic_file_upload_blue_24dp"
            android:text="Uploads" />

        <Button
            android:id="@+id/downloads_B"
            style="@style/profile_four_buttons"
            android:drawableLeft="@drawable/ic_file_download_green_24dp"
            android:text="Downloads" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/logOut_B"
            style="@style/profile_lower_four_buttons"
            android:layout_marginStart="4dp"
            android:drawableStart="@drawable/ic_logout"
            android:drawablePadding="10dp"
            android:text="@string/log_out" />

        <Button
            android:id="@+id/report_b"
            style="@style/profile_lower_four_buttons"
            android:drawableStart="@drawable/ic_gray_report_an_issue"
            android:drawablePadding="10dp"
            android:text="@string/report_an_issue" />

        <Button
            android:id="@+id/share_b"
            style="@style/profile_lower_four_buttons"
            android:drawableLeft="@drawable/ic_share_brown_24dp"
            android:drawablePadding="10dp"
            android:text="@string/share_this_app" />

        <Button
            android:id="@+id/feedback_b"
            style="@style/profile_lower_four_buttons"
            android:drawableLeft="@drawable/ic_feedback_brown_24dp"
            android:drawablePadding="10dp"
            android:text="@string/feedback" />

        <Button
            android:id="@+id/about_b"
            style="@style/profile_lower_four_buttons"
            android:drawableStart="@drawable/icon_final_logo_with_border"
            android:drawablePadding="10dp"
            android:text="@string/about" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/developed_by"
        android:textColor="@color/colorGray_777777"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView17"
        app:layout_constraintEnd_toStartOf="@+id/textView17"
        app:layout_constraintTop_toTopOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/cipher_hub"
        android:textColor="@color/colorAppTheme"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/editUserDetails_IB"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_br_radius_gray_medium"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_edit_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/branchName_TV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/instituteName_TV" />



</androidx.constraintlayout.widget.ConstraintLayout>
